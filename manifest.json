{
   "manifest_version": 3,
   "name": "YouTubeCleanup",
   "description": "Fix some of Youtube's annoyances",
   "version": "0.1.0",
   "icons": {
     "512": "icons/512.png"
   },
   "permissions": [],
   "host_permissions": [
     "*://www.youtube.com/*"
   ],
   "background": {
      "page": "background.html"
   },
   "content_scripts": [ {
      "css": [ "css/style.css" ],
      "js": [ "js/main.js" ],
      "matches": [ "*://www.youtube.com/*" ],
      "run_at": "document_idle"
   } ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5de2da52-253e-4887-a6ae-630cc575a123}",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
